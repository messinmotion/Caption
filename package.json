{
  "name": "Caption",
  "productName": "Caption",
  "version": "2.0.0",
  "main": "main/index.js",
  "license": "MIT",
  "repository": "gielcobben/Caption",
  "scripts": {
    "start": "electron --inspect=5858 .",
    "build": "next build renderer && next export renderer",
    "dist": "npm run build && build --dir",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "build": {
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "mac": {
      "target": [
        "zip",
        "dmg"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "gielcobben",
        "repo": "Caption"
      }
    ]
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "19.22.1",
    "jest": "^20.0.4",
    "next": "3.0.6",
    "react": "15.6.1",
    "react-dom": "15.6.1"
  },
  "dependencies": {
    "addic7ed-api": "^1.3.2",
    "app-root-path": "2.0.1",
    "electron-dl": "^1.10.0",
    "electron-is-dev": "0.3.0",
    "electron-next": "3.1.1",
    "electron-settings": "^3.1.1",
    "electron-window-state": "^4.1.1",
    "lodash": "^4.17.4",
    "nano-fs": "^1.2.4",
    "opensubtitles-api": "^4.0.0",
    "p-queue": "^2.2.0",
    "react-dropzone": "^4.1.0"
  }
}
